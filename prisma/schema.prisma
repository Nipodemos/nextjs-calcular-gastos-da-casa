// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id                         Int    @id @default(autoincrement())
  nome                       String @unique
  porcentagemTaxaInss        Float
  porcentagemTaxaAlimentacao Float
  porcentagemTaxaPassagem    Float
  salario                    Float
  valorAlimentacao           Float
}

model Despesa {
  id        Int    @id @default(autoincrement())
  valor     Float
  descricao String @unique
}
